import random

word_list = ['apple', 'bread', 'cloud', 'zebra', 'plant']

word_to_guess = random.choice(word_list)
guessed_letters = []
incorrect_guesses = 0
max_attempts = 6

hidden_word = ['_'] * len(word_to_guess)

print("🎮 Welcome to Hangman!")
print("Guess the word one letter at a time.")
print(f"You have {max_attempts} incorrect guesses allowed.\n")

while incorrect_guesses < max_attempts and '_' in hidden_word:
    print("Word:", ' '.join(hidden_word))
    print(f"Guessed letters: {', '.join(guessed_letters)}")
    guess = input("Enter a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("❗ Please enter a single alphabet letter.\n")
        continue

    if guess in guessed_letters:
        print("⚠️ You already guessed that letter.\n")
        continue

    guessed_letters.append(guess)

    if guess in word_to_guess:
        print("✅ Correct!\n")
        for idx, char in enumerate(word_to_guess):
            if char == guess:
                hidden_word[idx] = guess
    else:
        incorrect_guesses += 1
        print(f"❌ Wrong! You have {max_attempts - incorrect_guesses} attempts left.\n")

if '_' not in hidden_word:
    print("🎉 Congratulations! You guessed the word:", word_to_guess)
else:
    print("💀 Game over! The word was:", word_to_guess)